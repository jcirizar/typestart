{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es2015",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "noLib": false,
    "outDir": "dist",
    "types" : ["node", "mocha", "chai"],
    "typeRoots": [ "node_modules/@types" ],
    "lib": ["es2017", "dom"]
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
